#version 330 core

// Output data
out vec3 color;

uniform sampler2D myTextureSampler ;
uniform float bright ;
uniform float contr ;

in vec2 coord ;

void main()
{
    float texel=texture (myTextureSampler, coord).r;
    // color8from8lut = texture (lutTexture, texel).rgb
	color = vec3((texel-0.5)*contr+0.5+bright, (texel-0.5)*contr+0.5+bright, (texel-0.5)*contr+0.5+bright) ;
    //color = texture (myTextureSampler, coord).rgb ;
    //color = vec3 (texel, texel, texel) ;
}
